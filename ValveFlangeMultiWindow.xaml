<Window x:Class="ValveFlangeMulti.UI.ValveFlangeMultiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ValveFlangeMulti.UI.ViewModels"
        xmlns:local="clr-namespace:ValveFlangeMulti.Services"
        Title="ValveFlangeMulti" Height="700" Width="1050" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Import/Refresh" Padding="10,6"
                    Command="{Binding ImportRefreshCommand}" />

            <TextBox Grid.Column="1" Margin="10,0" IsReadOnly="True"
                     Text="{Binding ExcelPathDisplay}" />

            <Border Grid.Column="2" Padding="10,4" CornerRadius="8" Background="#EEE">
                <TextBlock Text="{Binding SettingStateText}" VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Main -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="650"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Valve list -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" Margin="0,0,0,8" Height="28"
                             Text="{Binding ValveSearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Search ItemName" />

                    <ListBox Grid.Row="1" ItemsSource="{Binding FilteredValveItems}"
                             SelectedItem="{Binding SelectedValveItem}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Content="{Binding ItemName}" Padding="10,6"
                                            Command="{Binding DataContext.SelectValveCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"/>
                                    <TextBlock Grid.Column="1" Margin="10,0,0,0" TextWrapping="Wrap"
                                               Text="{Binding ClassListText}"
                                               ToolTip="{Binding ClassListTooltip}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right: options + run -->
            <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock Text="Insert Options" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <StackPanel Margin="0,0,0,10">
                        <RadioButton Content="Pick" IsChecked="{Binding InsertMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Pick}" />
                        <RadioButton Content="Offset Valve Center" IsChecked="{Binding InsertMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=OffsetValveCenter}" />
                        <RadioButton Content="Offset Valve Flange" IsChecked="{Binding InsertMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=OffsetValveFlange}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Offset (mm):" Width="90" VerticalAlignment="Center"/>
                        <TextBox Width="120" Text="{Binding OffsetMmText, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Margin="10,0,0,0" Foreground="Tomato"
                                   Text="{Binding OffsetValidationMessage}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="{Binding SelectedValveDisplay}" Margin="0,0,0,14" />

                    <Button Content="Run / Select Pipe" Padding="12,10" FontSize="15"
                            IsEnabled="{Binding CanRun}" Command="{Binding RunSelectPipeCommand}"/>

                    <TextBlock Text="Log" FontWeight="SemiBold" Margin="0,16,0,6"/>
                    <ListBox ItemsSource="{Binding LogLines}" Height="220"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,8,0,0" Padding="10,6" Background="#F6F6F6" CornerRadius="8">
            <TextBlock Text="{Binding StatusMessage}" />
        </Border>
    </Grid>
</Window>
